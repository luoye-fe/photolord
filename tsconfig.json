{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap":true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "pretty": true,
    "declaration": true,
    "typeRoots": [ "./typings", "./node_modules/@types"],
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "dist",
    "paths": {
      "@/*": ["./*"]
    },
    "plugins": [{
      "transform": "@zerollup/ts-transform-paths"
    }]
  },
  "exclude": [
    "dist",
    "node_modules",
    "test"
  ]
}
